@charset "utf-8";
/* CSS Document */

.minipollcontainer, .minipollresultscontainer {
 background-color:#e7e7e7	;
 width:200px;
 position:relative;
}
.minipollhead {
	font-size:15px;
	/* font-family:Verdana, Geneva, sans-serif; */
	font-family:Arial,Helvetica,sans-serif;
	font-weight: bold;
	padding-bottom:25px;
}
.minipollanswercontainer,.minipollanswerresultcontainer {
 background-color:#e7e7e7	;
 width:200px;
 position:relative;
 font-size: 12px;
 font-weight: normal;
 /* font-family:Verdana, Geneva, sans-serif;*/
 font-family:Arial,Helvetica,sans-serif;
 /* font-family:'Roboto',Arial; */
 height:40px;
}
.percentholder {
	position:relative;
	width:200px;
	height:20px;
	
}
.percentouter{
	/*display:block;
	width:200px;
	height:15px; */
	background-color:#fff;
	float:left;
	
	border: 0 solid #ececec;
    border-radius: 3px;
    box-shadow: 0 0 7px -2px #aaaaaa;
    display: inline-block;
    height: 7px;
    padding: 1px;
    width: 80px;
	
}
.percentinner{
	/*display:block;
	width:0%;
	height: 10px; */
	
	background-color:#9933cc;
	
	border: 0 solid #ececec;
    border-radius: 3px;
    box-shadow: 0 0 7px -2px #aaaaaa;
    display: inline-block;
    height: 5px;
    margin: 0;
    width: 50%;
	float:left;
	
	
}
.votedthis .percentinner{
	background-color:#396;
}
.percent {
	float:right;
	display:block;
	width:50px;
	text-align:right;
}
.minipollanswerresultcontainer {
	color:#4A4A4A
}
.votedthis {
	color:#396;
}
.disabled { background: #F07771; }

.mipoanswerinput {
	cursor:pointer;
}

.mipoanswerinput.disab {
	cursor:not-allowed ;
}